#include<stdio.h>
int main()
{
int size,i,sum=0;
float avg=0;
printf("please enter the array size:");
scanf("%d",&size);
int arr[size];
printf("enter the array elements:");
for(int i=0;i<size;i++)
{
scanf("%d",&arr[i]);
sum=sum+arr[i];
}
avg=sum/size;
printf("/nthe sum of array elements=%d \n",sum);
printf("/nthe average of array elements=%.2f \n",avg);
}
